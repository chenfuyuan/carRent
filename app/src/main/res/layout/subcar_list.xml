<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@android:color/background_light"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/car_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/car_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/user" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/car_image">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="8dp"
                android:text="姓名"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="车牌"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="153dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="车型"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/freeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="空闲时间"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_end"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttontype"
                android:text="结束"
                android:textColor="@android:color/background_light"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/text_endSubCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已结束"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_subtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间:" />

        <TextView
            android:id="@+id/text_subtime_data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_subtime"/>


        <TextView
            android:id="@+id/text_phone_data"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@id/text_phone_data"
            android:text="电话: " />

    </RelativeLayout>

</LinearLayout>